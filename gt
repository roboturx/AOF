#!/usr/bin/bash
##!/bin/bash
echo "***********************************************************"
echo "****************** gitt 1.2-10.2023 ***********************"
echo "***********************************************************"


for d in */ ; do
    echo "********************************************************************"
    echo "*-/-/-/-/-/-/-/-/-/-/-/-/-/----------------------------------------*"
    echo "*-/-/-/-                                                                      $d"
    echo "*-/-/-/-/-/-/-/-/-/-/-/-/-/----------------------------------------*"
    echo "********************************************************************"
    cd $d
    pwd
    echo "******************************************** status ***"
    git status
    echo "******************************************* pulling ***"
    git pull
    echo "******************************************** adding ***"
    git add .
    echo "************************************ committing ... ***"
    git commit -m "committed $(date +%Y%m%d)"
    echo "**************************************** pushing... ***"
    git push
    echo "****************************************** checkout ***"
    git checkout
    echo "*******************************************************"
    cd ..

done
#/home/mr/blender-2.93.1-linux-x64/blender
